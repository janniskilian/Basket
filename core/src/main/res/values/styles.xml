<resources>

    <style name="Widget.Basket" parent="android:Widget"/>

    <style name="Widget.Basket.AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Basket.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="Widget.Basket.ToolbarTitle" parent="TextAppearance.Basket.Headline">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Widget.Basket.ActionButton.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorIcon</item>
    </style>

    <style name="TextAppearance.Basket.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_slab_700</item>
        <item name="fontFamily">@font/roboto_slab_700</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.Basket.EmptyImage">
        <item name="android:layout_width">@dimen/empty_image_size</item>
        <item name="android:layout_height">@dimen/empty_image_size</item>
        <item name="android:contentDescription">@string/empty_image_desc</item>
        <item name="android:tint">@color/empty_image</item>
    </style>

    <style name="Widget.Basket.EmptyHeadline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/three</item>
        <item name="android:layout_marginStart">@dimen/two</item>
        <item name="android:layout_marginEnd">@dimen/two</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="layout_constraintWidth_max">@dimen/empty_text_max_width</item>
    </style>

    <style name="Widget.Basket.EmptyInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/one</item>
        <item name="android:layout_marginStart">@dimen/two</item>
        <item name="android:layout_marginEnd">@dimen/two</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="layout_constraintWidth_max">@dimen/empty_text_max_width</item>
    </style>

    <style name="Widget.Basket.BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Widget.Basket.FullHeightDialog" parent="Theme.MaterialComponents.Light.DialogWhenLarge">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Widget.Basket.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">6dp</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>

    <style name="Widget.Basket.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="rippleColor">?attr/colorSecondary</item>
    </style>

    <style name="Widget.Basket.IconButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:layout_width">@dimen/increment</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxHeight">@dimen/increment</item>
        <item name="android:tint">?attr/colorIcon</item>
    </style>

</resources>
