<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/vd_speechinputclear_speechinput">

    <target android:name="speechinputclearGroup">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/animation_duration_s"
                android:interpolator="@android:interpolator/fast_out_slow_in"
                android:propertyName="rotation"
                android:valueFrom="0"
                android:valueTo="180"/>
        </aapt:attr>
    </target>

    <target android:name="speechinputPath">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/animation_duration_s"
                android:interpolator="@android:interpolator/fast_out_slow_in"
                android:propertyName="fillAlpha"
                android:valueFrom="1"
                android:valueTo="0"/>
        </aapt:attr>
    </target>

    <target android:name="clearPath">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/animation_duration_s"
                android:interpolator="@android:interpolator/fast_out_slow_in"
                android:propertyName="fillAlpha"
                android:valueFrom="0"
                android:valueTo="1"/>
        </aapt:attr>
    </target>

</animated-vector>
