<?xml version="1.0" encoding="utf-8"?>
<animated-selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/remove"
        android:drawable="@drawable/vd_addremove_remove"
        android:state_selected="true"/>

    <item
        android:id="@+id/add"
        android:drawable="@drawable/vd_addremove_add"/>

    <transition
        android:drawable="@drawable/avd_addremove_remove_to_add"
        android:fromId="@id/remove"
        android:toId="@id/add"/>

    <transition
        android:drawable="@drawable/avd_addremove_add_to_remove"
        android:fromId="@id/add"
        android:toId="@id/remove"/>
</animated-selector>
