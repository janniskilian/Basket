<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/vd_addremove_remove">

    <target android:name="addRemovePath">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/animation_duration_s"
                android:interpolator="@android:interpolator/fast_out_slow_in"
                android:propertyName="pathData"
                android:valueFrom="@string/avd_path_remove"
                android:valueTo="@string/avd_path_add"
                android:valueType="pathType"/>
        </aapt:attr>
    </target>

    <target android:name="addRemovePath">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/animation_duration_s"
                android:interpolator="@android:interpolator/linear"
                android:propertyName="fillColor"
                android:valueFrom="@color/red"
                android:valueTo="@color/green"
                android:valueType="colorType"/>
        </aapt:attr>
    </target>

    <target android:name="addRemoveGroup">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/animation_duration_s"
                android:interpolator="@android:interpolator/fast_out_slow_in"
                android:propertyName="rotation"
                android:valueFrom="180"
                android:valueTo="0"/>
        </aapt:attr>
    </target>

</animated-vector>
