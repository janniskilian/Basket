<?xml version="1.0" encoding="utf-8"?>
<animated-selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/clear"
        android:drawable="@drawable/vd_speechinputclear_clear"
        android:state_selected="true"/>

    <item
        android:id="@+id/speechinput"
        android:drawable="@drawable/vd_speechinputclear_speechinput"/>

    <transition
        android:drawable="@drawable/avd_speechinputclear_clear_to_speechinput"
        android:fromId="@id/clear"
        android:toId="@id/speechinput"/>

    <transition
        android:drawable="@drawable/avd_speechinputclear_speechinput_to_clear"
        android:fromId="@id/speechinput"
        android:toId="@id/clear"/>
</animated-selector>
