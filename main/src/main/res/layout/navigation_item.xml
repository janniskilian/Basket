<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_item_height"
    android:layout_marginStart="@dimen/one"
    android:layout_marginTop="@dimen/half"
    android:layout_marginEnd="@dimen/one"
    android:layout_marginBottom="@dimen/half"
    android:background="@drawable/navigation_item_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/one"
    android:paddingEnd="@dimen/one">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/navigation_item_icon_desc"
        app:tint="@color/navigation_item_icon_color"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/four"
        android:textAllCaps="false"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        android:textColor="@color/navigation_item_text_color"
        app:textAllCaps="false"
        tools:text="Lorem ipsum"/>
</LinearLayout>
